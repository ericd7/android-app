<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlockShooter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/game_primary</item>
        <item name="colorPrimaryVariant">@color/game_accent</item>
        <item name="colorOnPrimary">@color/game_secondary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/game_secondary</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/game_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/game_background</item>
    </style>
    
    <!-- Fullscreen game theme -->
    <style name="Theme.BlockShooter.Fullscreen" parent="Theme.BlockShooter">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/black</item>
    </style>
</resources> 